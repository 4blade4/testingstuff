while true do
local args = {
    [1] = 203
}

game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("EquipTool"):FireServer(unpack(args))
wait(3)
local args = {
    [1] = 203
}

game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("UnequipTool"):FireServer(unpack(args))
wait(0)
end
